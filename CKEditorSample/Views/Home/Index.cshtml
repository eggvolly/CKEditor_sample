
<div class="row">
    <div class="col-md-12">
        <h3>CKEditor文字編輯器</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <textarea id="ckeditorsample"></textarea>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        var editor = CKEDITOR.replace('ckeditorsample', {
            filebrowserImageUploadUrl: '@Url.Action("UploadImageUseCKEditor", "Generator")',
            filebrowserUploadUrl: '@Url.Action("UploadFileUseCKEditor", "Generator")'
        });
    })
    </script>
}